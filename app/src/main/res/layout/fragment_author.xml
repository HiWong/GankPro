<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white"
    android:orientation="vertical"
    tools:context="com.freedom.lauzy.gankpro.ui.fragment.AuthorFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/color_bg_white"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardElevation="@dimen/dp_4">

        <LinearLayout
            android:background="@color/color_item_bg_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_72"
                android:layout_marginTop="12dp"
                android:src="@mipmap/icon_author"/>

            <TextView
                android:id="@+id/AppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:padding="@dimen/dp_5"
                android:text="Gank"
                android:textSize="@dimen/text_sp_27"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Developed By Lauzy"
                android:textSize="@dimen/text_sp_13"/>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="1.0.0"
                android:textSize="@dimen/text_sp_13"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

   <!-- <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:cardUseCompatPadding="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_15"
            android:autoLink="web"
            android:fontFamily="monospace"
            android:lineSpacingExtra="@dimen/dp_6"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/about_me_desc"
            android:textIsSelectable="true"/>
    </android.support.v7.widget.CardView>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_author"
        android:layout_marginBottom="@dimen/dp_52"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
