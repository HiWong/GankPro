<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/category_content"
    android:orientation="vertical"
    tools:context="com.freedom.lauzy.gankpro.ui.fragment.CategoryFragment">

    <View
        android:background="@color/color_press_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_category"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/color_style_gray"
        android:elevation="@dimen/dp_1"
        app:tabIndicatorColor="@color/color_white"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/color_white"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>